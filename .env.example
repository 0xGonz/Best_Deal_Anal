# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?schema=public"

# Session Security
SESSION_SECRET="your-strong-secret-key-at-least-32-chars"

# Server Configuration
PORT=5000
NODE_ENV=development # Set to "production" in production environment

# Redis Configuration (for job processing)
REDIS_URL="redis://localhost:6379" # Optional, will fall back to local processing if not available

# Frontend Environment Variables (must be prefixed with VITE_)
VITE_API_URL="http://localhost:5000/api"

# Optional: Logging Configuration
LOG_LEVEL="debug" # Options: debug, info, warn, error

# Optional: File Upload Configuration
MAX_UPLOAD_SIZE_MB=20
UPLOAD_DIR="./public/uploads"